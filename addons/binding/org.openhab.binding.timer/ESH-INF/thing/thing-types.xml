    <!-- Channel Types -->
    <channel-type id="enabled">
        <item-type>Switch</item-type>
        <label>Enabled</label>
        <description>Whether this timer is enabled.</description>
    </channel-type>

    <channel-type id="status">
        <item-type>Switch</item-type>
        <label>Status</label>
        <description>Whether this timer is currently on or off. This is what you should hook your rule into.</description>
        <state readOnly="true" />
    </channel-type>

    <channel-type id="description">
        <item-type>String</item-type>
        <label>Description</label>
        <description>A text description of this timers settings.</description>
        <state readOnly="true" />
    </channel-type>


	<channel-type id="on_time_hours">
		<item-type>Number</item-type>
		<label>On hour</label>
		<description>The hour this timer will turn on</description>
		<state min="0" max="23" step="1" readOnly="false" pattern="%s" />
	</channel-type>
	
    <channel-type id="on_time_minutes">
        <item-type>Number</item-type>
        <label>On Minutes</label>
        <description>The minutes this timer will turn on</description>
        <state min="0" max="59" step="1" readOnly="false" pattern="%s" />
    </channel-type>	

    <channel-type id="on_time_seconds">
        <item-type>Number</item-type>
        <label>On Seconds</label>
        <description>The minutes this timer will turn on</description>
        <state min="0" max="59" step="1" readOnly="false" pattern="%s" />
    </channel-type> 
    
    <channel-type id="off_time_hours">
        <item-type>Number</item-type>
        <label>Off hour</label>
        <description>The hour this timer will turn off</description>
        <state min="0" max="23" step="1" readOnly="false" pattern="%s"/>
    </channel-type>
    
    <channel-type id="off_time_minutes">
        <item-type>Number</item-type>
        <label>Off Minutes</label>
        <description>The minutes this timer will turn off</description>
        <state min="0" max="59" step="1" readOnly="false" pattern="%s"/>
    </channel-type> 

    <channel-type id="off_time_seconds">
        <item-type>Number</item-type>
        <label>Off Seconds</label>
        <description>The minutes this timer will turn off</description>
        <state min="0" max="59" step="1" readOnly="false" pattern="%s"/>
    </channel-type>  
    
    <channel-type id="run_on_mon">
        <item-type>Switch</item-type>
        <label>Run on Monday?</label>
        <description>Whether this timer runs on Mondays.</description>
    </channel-type>

    <channel-type id="run_on_tue">
        <item-type>Switch</item-type>
        <label>Run on Tuesday?</label>
        <description>Whether this timer runs on Tuesdays.</description>
    </channel-type>
       
    <channel-type id="run_on_wed">
        <item-type>Switch</item-type>
        <label>Run on Wednesday?</label>
        <description>Whether this timer runs on Wednesdays.</description>
    </channel-type>
    <channel-type id="run_on_thu">
        <item-type>Switch</item-type>
        <label>Thur?</label>
        <description>Whether this timer runs on Thursdays.</description>
    </channel-type>
            <channel-type id="run_on_fri">
        <item-type>Switch</item-type>
        <label>Fri?</label>
        <description>Whether this timer runs on Fridays.</description>
    </channel-type>
    <channel-type id="run_on_sat">
        <item-type>Switch</item-type>
        <label>Sat?</label>
        <description>Whether this timer runs on Saturdays.</description>
    </channel-type>
            <channel-type id="run_on_sun">
        <item-type>Switch</item-type>
        <label>Sun?</label>
        <description>Whether this timer runs on Sundays.</description>
    </channel-type>
</thing:thing-descriptions>
