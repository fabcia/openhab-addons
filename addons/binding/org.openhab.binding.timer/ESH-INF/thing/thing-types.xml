<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="timer"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Sample Thing Type -->
	<thing-type id="dailyTimer">
		<label>Daily Timer</label>
		<description>This is a time based timer that will turn on/off at a certain time of the day</description>
		<channels>
            <channel id="status" typeId="status"/>
			<channel id="enabled" typeId="enabled"/>
            <channel id="description" typeId="description"/>
	    	<channel id="on_time_hours" typeId="on_time_hours"/>
            <channel id="on_time_minutes" typeId="on_time_minutes"/>
            <channel id="on_time_seconds" typeId="on_time_seconds"/>
		    <channel id="off_time_hours" typeId="off_time_hours"/>
		    <channel id="off_time_minutes" typeId="off_time_minutes"/>
		    <channel id="off_time_seconds" typeId="off_time_seconds"/>
		    <channel id="run_on_mon" typeId="run_on_mon"/>
		    <channel id="run_on_tue" typeId="run_on_tue"/>
		    <channel id="run_on_wed" typeId="run_on_wed"/>
	        <channel id="run_on_thu" typeId="run_on_thu"/>
		    <channel id="run_on_fri" typeId="run_on_fri"/>
		    <channel id="run_on_sat" typeId="run_on_sat"/>
	        <channel id="run_on_sun" typeId="run_on_sun"/>
		</channels>
	</thing-type>
	
